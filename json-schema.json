{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Coding Assistant Training Data Schema",
  "description": "Schema for collecting high-quality data from VS Code extension for fine-tuning coding language models",
  "type": "object",
  "properties": {
    "instruction_dataset": {
      "type": "array",
      "description": "Collection of coding instruction examples for training",
      "items": {
        "type": "object",
        "required": ["instruction_type", "instruction", "input", "output", "context"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the training example"
          },
          "instruction_type": {
            "type": "string",
            "description": "Category of the coding instruction",
            "enum": [
              "bug_fixing",
              "code_completion",
              "algorithm_implementation",
              "code_refactoring",
              "unit_test_generation",
              "documentation_generation",
              "memory_leak_fix",
              "performance_optimization",
              "configuration_setup",
              "security_fix",
              "code_review",
              "api_implementation",
              "debugging",
              "data_processing",
              "pattern_implementation",
              "style_enforcement",
              "type_definition",
              "api_integration",
              "dependency_management",
              "code_explanation",
              "database_query_optimization",
              "frontend_component",
              "devops_automation",
              "architecture_design"
            ]
          },
          "instruction": {
            "type": "string",
            "description": "The instruction or task description provided to the model"
          },
          "input": {
            "type": "string",
            "description": "The input code or text for the model to process"
          },
          "output": {
            "type": "string",
            "description": "The expected or actual output/solution for the given instruction and input"
          },
          "context": {
            "type": "object",
            "description": "Rich contextual information about the coding scenario",
            "properties": {
              "language": {
                "type": "string",
                "description": "The programming language of the code",
                "examples": ["python", "javascript", "java", "typescript", "cpp", "go", "ruby", "php", "csharp", "rust", "kotlin", "swift", "sql", "html", "css", "bash", "powershell", "dart", "scala", "perl", "r", "jsx", "yaml", "toml", "xml", "markdown"]
              },
              "user_prompt": {
                "type": "string",
                "description": "The original query or question asked by the user in the VS Code extension"
              },
              "error_message": {
                "type": "string",
                "description": "Error message generated by the compiler, interpreter, or runtime"
              },
              "terminal_output": {
                "type": "string",
                "description": "Full terminal/console output including any error stack traces or execution results"
              },
              "execution_time": {
                "type": "number",
                "description": "Execution time in seconds (if applicable)"
              },
              "execution_date": {
                "type": "string",
                "format": "date-time",
                "description": "ISO timestamp when the code was executed"
              },
              "successful_execution": {
                "type": "boolean",
                "description": "Whether the code executed successfully"
              },
              "file_context": {
                "type": "string",
                "description": "Additional context about the file or project purpose"
              },
              "file_path": {
                "type": "string",
                "description": "Path of the file relative to the project root"
              },
              "file_content": {
                "type": "string",
                "description": "Complete content of the file (when relevant)"
              },
              "file_metadata": {
                "type": "object",
                "description": "Additional metadata about the file",
                "properties": {
                  "size": {
                    "type": "number",
                    "description": "Size of the file in bytes"
                  },
                  "creation_date": {
                    "type": "string",
                    "format": "date-time",
                    "description": "When the file was created"
                  },
                  "modification_date": {
                    "type": "string",
                    "format": "date-time",
                    "description": "When the file was last modified"
                  },
                  "line_count": {
                    "type": "number",
                    "description": "Number of lines in the file"
                  }
                }
              },
              "project_structure": {
                "type": "array",
                "description": "Key files/folders in the project structure",
                "items": {
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "string",
                      "description": "Relative path of the file/folder"
                    },
                    "type": {
                      "type": "string",
                      "enum": ["file", "directory"],
                      "description": "Type of the entry"
                    }
                  }
                }
              },
              "dependencies": {
                "type": "array",
                "description": "Project dependencies relevant to the code",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "description": "Dependency name"
                    },
                    "version": {
                      "type": "string",
                      "description": "Dependency version"
                    }
                  }
                }
              },
              "database_info": {
                "type": "string",
                "description": "Information about the database being used"
              },
              "browser_console_error": {
                "type": "string",
                "description": "Errors displayed in the browser console for web development"
              },
              "source_control_diff": {
                "type": "string",
                "description": "Git or other source control diff showing changes"
              },
              "user_selections": {
                "type": "array",
                "description": "Parts of code the user has selected/highlighted",
                "items": {
                  "type": "object",
                  "properties": {
                    "start_line": {
                      "type": "number",
                      "description": "Start line of selection"
                    },
                    "end_line": {
                      "type": "number",
                      "description": "End line of selection"
                    },
                    "text": {
                      "type": "string",
                      "description": "Selected text"
                    }
                  }
                }
              },
              "editor_state": {
                "type": "object",
                "description": "State of the editor when the instruction was captured",
                "properties": {
                  "cursor_position": {
                    "type": "object",
                    "properties": {
                      "line": {
                        "type": "number",
                        "description": "Line number of cursor position"
                      },
                      "column": {
                        "type": "number",
                        "description": "Column number of cursor position"
                      }
                    }
                  },
                  "visible_range": {
                    "type": "object",
                    "properties": {
                      "start_line": {
                        "type": "number",
                        "description": "First visible line in editor"
                      },
                      "end_line": {
                        "type": "number",
                        "description": "Last visible line in editor"
                      }
                    }
                  }
                }
              },
              "framework": {
                "type": "string",
                "description": "Framework being used (e.g., React, Django, Spring)"
              },
              "runtime_environment": {
                "type": "object",
                "description": "Details about the execution environment",
                "properties": {
                  "os": {
                    "type": "string",
                    "description": "Operating system"
                  },
                  "language_version": {
                    "type": "string",
                    "description": "Version of the programming language"
                  },
                  "environment_vars": {
                    "type": "object",
                    "description": "Relevant environment variables (with sensitive data removed)",
                    "additionalProperties": {
                      "type": "string"
                    }
                  }
                }
              },
              "similar_code_snippets": {
                "type": "array",
                "description": "Similar code snippets identified by embeddings",
                "items": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "string",
                      "description": "The similar code snippet"
                    },
                    "similarity_score": {
                      "type": "number",
                      "description": "Embedding similarity score (0.0 to 1.0)"
                    },
                    "source": {
                      "type": "string",
                      "description": "Source of the similar code (e.g., user_history, code_snippets_db)",
                      "enum": ["user_history", "code_snippets_db", "github", "stackoverflow", "documentation", "project_files"]
                    },
                    "file_path": {
                      "type": "string",
                      "description": "Path to the file containing the similar code (if applicable)"
                    },
                    "url": {
                      "type": "string",
                      "description": "URL source of the similar code (if from external source)"
                    },
                    "last_used": {
                      "type": "string",
                      "format": "date-time",
                      "description": "When this snippet was last used by the user"
                    }
                  },
                  "required": ["code", "similarity_score", "source"]
                }
              },
              "user_interaction_history": {
                "type": "array",
                "description": "Previous interactions related to this code",
                "items": {
                  "type": "object",
                  "properties": {
                    "timestamp": {
                      "type": "string",
                      "format": "date-time",
                      "description": "When the interaction occurred"
                    },
                    "type": {
                      "type": "string",
                      "description": "Type of interaction",
                      "enum": ["edit", "execute", "debug", "search", "prompt", "copy", "paste"]
                    },
                    "content": {
                      "type": "string",
                      "description": "Content of the interaction"
                    }
                  }
                }
              },
              "linting_errors": {
                "type": "array",
                "description": "Linting or static analysis warnings/errors",
                "items": {
                  "type": "object",
                  "properties": {
                    "line": {
                      "type": "number",
                      "description": "Line number"
                    },
                    "column": {
                      "type": "number",
                      "description": "Column number"
                    },
                    "message": {
                      "type": "string",
                      "description": "Error/warning message"
                    },
                    "severity": {
                      "type": "string",
                      "enum": ["error", "warning", "info"],
                      "description": "Severity level"
                    },
                    "rule": {
                      "type": "string",
                      "description": "Linting rule that triggered"
                    }
                  }
                }
              },
              "performance_metrics": {
                "type": "object",
                "description": "Performance metrics for the code",
                "properties": {
                  "memory_usage": {
                    "type": "number",
                    "description": "Memory usage in MB"
                  },
                  "cpu_usage": {
                    "type": "number",
                    "description": "CPU usage percentage"
                  },
                  "execution_time": {
                    "type": "number",
                    "description": "Execution time in milliseconds"
                  }
                }
              },
              "debug_session_data": {
                "type": "object",
                "description": "Data from debugging sessions",
                "properties": {
                  "breakpoints": {
                    "type": "array",
                    "description": "List of breakpoint positions",
                    "items": {
                      "type": "object",
                      "properties": {
                        "line": {
                          "type": "number"
                        },
                        "column": {
                          "type": "number"
                        }
                      }
                    }
                  },
                  "watch_variables": {
                    "type": "array",
                    "description": "Variables being watched during debugging",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string",
                          "description": "Variable name"
                        },
                        "value": {
                          "type": "string",
                          "description": "Variable value at breakpoint"
                        }
                      }
                    }
                  },
                  "call_stack": {
                    "type": "array",
                    "description": "Call stack at breakpoint",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              },
              "code_completion_history": {
                "type": "array",
                "description": "History of code completions accepted/rejected by the user",
                "items": {
                  "type": "object",
                  "properties": {
                    "suggestion": {
                      "type": "string",
                      "description": "The suggested completion"
                    },
                    "accepted": {
                      "type": "boolean",
                      "description": "Whether the user accepted the suggestion"
                    },
                    "position": {
                      "type": "object",
                      "properties": {
                        "line": {
                          "type": "number"
                        },
                        "column": {
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              },
              "llm_conversation_history": {
                "type": "array",
                "description": "Previous messages in the LLM conversation",
                "items": {
                  "type": "object",
                  "properties": {
                    "role": {
                      "type": "string",
                      "enum": ["user", "assistant"],
                      "description": "Who sent the message"
                    },
                    "content": {
                      "type": "string",
                      "description": "Content of the message"
                    },
                    "timestamp": {
                      "type": "string",
                      "format": "date-time",
                      "description": "When the message was sent"
                    }
                  }
                }
              },
              "test_results": {
                "type": "object",
                "description": "Results of running tests on the code",
                "properties": {
                  "total_tests": {
                    "type": "number"
                  },
                  "passed_tests": {
                    "type": "number"
                  },
                  "failed_tests": {
                    "type": "number"
                  },
                  "skipped_tests": {
                    "type": "number"
                  },
                  "test_output": {
                    "type": "string",
                    "description": "Raw output from test runner"
                  },
                  "failing_tests": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "error": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              },
              "user_preferences": {
                "type": "object",
                "description": "User's coding preferences",
                "properties": {
                  "code_style": {
                    "type": "string",
                    "description": "Preferred code style (e.g., PEP8, Google style)"
                  },
                  "indentation": {
                    "type": "string",
                    "description": "Preferred indentation (tabs, 2 spaces, 4 spaces)"
                  },
                  "naming_convention": {
                    "type": "string",
                    "description": "Preferred naming convention (camelCase, snake_case)"
                  }
                }
              },
              "metadata": {
                "type": "object",
                "description": "Additional metadata about this instruction example",
                "properties": {
                  "created_at": {
                    "type": "string",
                    "format": "date-time",
                    "description": "When this example was created"
                  },
                  "extension_version": {
                    "type": "string",
                    "description": "Version of the VS Code extension"
                  },
                  "vs_code_version": {
                    "type": "string",
                    "description": "Version of VS Code"
                  },
                  "anonymized_user_id": {
                    "type": "string",
                    "description": "Anonymous identifier for the user who generated this example"
                  },
                  "skill_level": {
                    "type": "string",
                    "enum": ["beginner", "intermediate", "advanced", "expert"],
                    "description": "Estimated skill level based on user interactions"
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Tags categorizing this example"
                  }
                }
              },
              "original_llm_response": {
                "type": "string",
                "description": "Original response from the LLM that the user received"
              },
              "user_feedback": {
                "type": "object",
                "description": "User feedback on the LLM response",
                "properties": {
                  "rating": {
                    "type": "number",
                    "minimum": 1,
                    "maximum": 5,
                    "description": "User rating (1-5)"
                  },
                  "comment": {
                    "type": "string",
                    "description": "User's feedback comment"
                  },
                  "was_helpful": {
                    "type": "boolean",
                    "description": "Whether the user found the response helpful"
                  },
                  "helped_solve_problem": {
                    "type": "boolean",
                    "description": "Whether the response helped solve the user's problem"
                  }
                }
              }
            },
            "required": ["language", "user_prompt"]
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "When this instruction example was recorded"
          },
          "model_used": {
            "type": "string",
            "description": "LLM that provided the output (e.g., claude-3-sonnet, gpt-4o)"
          }
        }
      }
    },
    "dataset_metadata": {
      "type": "object",
      "description": "Metadata about the overall dataset",
      "properties": {
        "version": {
          "type": "string",
          "description": "Version of the dataset"
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "When the dataset was created"
        },
        "sample_count": {
          "type": "number",
          "description": "Number of samples in the dataset"
        },
        "language_distribution": {
          "type": "object",
          "description": "Distribution of programming languages in the dataset",
          "additionalProperties": {
            "type": "number"
          }
        },
        "instruction_type_distribution": {
          "type": "object",
          "description": "Distribution of instruction types in the dataset",
          "additionalProperties": {
            "type": "number"
          }
        },
        "license": {
          "type": "string",
          "description": "License under which the dataset is released"
        },
        "source": {
          "type": "string",
          "description": "Source of the dataset (e.g., 'VS Code Extension Data Collection')"
        },
        "processing_steps": {
          "type": "array",
          "description": "Steps taken to process the raw data",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": ["instruction_dataset"]
}
